<h1>Login Page</h1>

{{#if session.isAuthenticated }}
  <p>Estou logado</p>
{{/if}}
<form>
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    {{input 
      type="email" 
      value=emailAddress 
      class="form-control" 
      placeholder="Please type your e-mail address." 
      autofocus="autofocus"
    }}
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    {{input 
      type="password" 
      value=userPassword 
      class="form-control" 
      placeholder="Please type your e-mail address." 
      autofocus="autofocus"
    }}
  </div>
  <button 
    class="btn btn-primary" 
    {{action "signIn" "password" email password}}
  > Submit
  </button>
  <button 
    class="btn btn-primary" 
    {{action "signOut"}}
  > Close
  </button>
</form>